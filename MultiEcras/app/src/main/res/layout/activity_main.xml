<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cor_background">

    <TextView
        android:id="@+id/numeros"
        style="@style/Opcoes"
        android:background="@color/cor_categoria_numeros"
        android:text="@string/categoria_numeros" />
    <TextView
        android:id="@+id/familia"
        style="@style/Opcoes"
        android:background="@color/cor_categoria_familia"
        android:text="@string/categoria_familia"/>
    <TextView
        android:id="@+id/cores"
        style="@style/Opcoes"
        android:background="@color/cor_categoria_cores"
        android:text="@string/categoria_cores"/>
    <TextView
        android:id="@+id/frases"
        style="@style/Opcoes"
        android:background="@color/cor_categoria_frases"
        android:text="@string/categoria_frases"/>


</LinearLayout>
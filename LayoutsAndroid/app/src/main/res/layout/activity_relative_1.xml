<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TxtIdeais"
        android:text="Ideais"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/EditComentarios"
        android:textSize="18sp"
        android:layout_alignLeft="@+id/TxtIdeais"
        android:layout_below="@+id/TxtIdeais"
        android:gravity="top" />
    <Button
        android:id="@+id/BtnGravar"
        android:text="Gravar"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditComentarios"
        android:layout_alignRight="@+id/EditComentarios"/>
    <Button
        android:id="@+id/BtnCancelar"
        android:text="Cancelar"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditComentarios"
        android:layout_alignLeft="@+id/EditComentarios"/>




</RelativeLayout>